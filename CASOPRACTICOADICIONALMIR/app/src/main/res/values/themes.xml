<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CasoPractico" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorPrimaryVariant">@color/ocean_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/cyan_accent</item>
        <item name="android:windowBackground">@color/pale_blue_bg</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="OceanButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/cyan_accent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">14dp</item>
    </style>
</resources>